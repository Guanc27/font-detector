{
  "manifest_version": 3,
  "name": "Font Detector",
  "version": "1.0.0",
  "description": "Select text on any webpage and identify its font using AI.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Font Detector"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.onrender.com/*"
  ]
}
